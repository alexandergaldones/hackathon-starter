extends layout

block content
    .pb-2.mt-2.mb-4.border-bottom
        h3 Customer Form

    form(method='POST')
        input(type=`hidden` name='_csrf', value=_csrf)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='name') Name
            .col-md-8
                input.form-control(type='text', name='name', id='name', autocomplete='name', autofocus=true)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='email') Email
            .col-md-8
                input.form-control(type='text', name='email', id='email', autocomplete='email', autofocus=true)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='mobileNumber') Mobile Number
            .col-md-8
                input.form-control(type='text', name='mobileNumber', id='mobileNumber', autocomplete='name', autofocus=true)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='description') Description
            .col-md-8
                textarea.form-control(name='description', id='description', rows='4' ) 
        .form-group
            .offset-md-2.col-md-8.p-1
                button.btn.btn-primary(type='submit')
                    i.far.fa-check-circle.fa-sm
                    | Submit